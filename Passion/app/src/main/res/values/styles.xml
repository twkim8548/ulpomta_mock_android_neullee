<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorTransparentWhite</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--fragment_chart-->
    <style name="calenderText">
        <!--글씨수정-->
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <!--    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="tabTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/colorBlackTab</item>                   <!--배경-->
        <item name="android:textColorPrimary">@android:color/white</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@android:color/black</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@null</item>                    <!-- 하단 움직이는 바 색-->
    </style>


    <style name="tabLayoutTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
    </style>
</resources>
