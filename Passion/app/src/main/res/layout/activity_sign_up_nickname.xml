<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_palloNickname_keyboard_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_left"
            android:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:text="@string/makeNickname"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/letterByte"
            android:textColor="@color/colorTransparentWhite"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/et_palloNickname_enterNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="60"
            android:gravity="center"
            android:hint="@string/pleaseEnterNickname"
            android:lines="1"
            android:textColor="@color/colorOrange"
            android:textColorHint="@color/colorTransparentWhite"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btn_find_pw_check_email"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_shape_white"
            android:text="@string/completion"
            android:textColor="@color/colorOrange"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>