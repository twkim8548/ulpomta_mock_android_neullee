<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/findEmail"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <!--원래 앱 : 이메일에 연결된 닉네임을 입력...-->
            <!--개발자 : 닉네임 입력을 부각할 수 있도록 멘트 수정-->
            <EditText
                android:id="@+id/et_sign_in_start_dialog_enter_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/enterNickname"
                android:textColorHint="@color/colorGray"
                android:textColor="@color/colorGray"
                android:textSize="20dp"
                android:inputType="text"
                android:maxLines="1"
                android:scrollHorizontally="false" />

        </FrameLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sign_in_start_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sign_in_start_dialog_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/check"
                android:textColor="@color/colorBlue"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>